---
import { Image } from 'astro:assets';
import smartbioticsImage from '../../assets/images/smartbiotics.webp';

interface Props {
  class?: string;
}

const { class: className } = Astro.props;
---

<div class={`relative w-full max-w-[280px] md:max-w-[320px] mx-auto ${className}`}>
    <Image 
        src={smartbioticsImage} 
        alt="Suplemento infantil Smartbiotics para microbiota y equilibrio digestivo" 
        class="w-full h-auto object-contain drop-shadow-sm"
        width={320}
        height={320}
        loading="eager"
    />
</div>
