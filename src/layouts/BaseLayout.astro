---
import DynamicSEO from '../components/seo/DynamicSEO.astro';
import Analytics from '../components/analytics/Analytics.astro';
import Disclaimer from '../components/legal/Disclaimer.astro';

interface Props {
  seo: {
    title: string;
    description: string;
    image?: string;
    noindex?: boolean;
    schema?: object | object[];
  };
}

const { seo } = Astro.props;
---

<!DOCTYPE html>
<html lang="es" class="scroll-smooth">
<head>
    <!-- Google Tag Manager -->
    <script>(function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
    new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
    j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
    'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
    })(window,document,'script','dataLayer','GTM-3MB2WFVX');</script>
    <!-- End Google Tag Manager -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <!-- Fonts: Inter (Clinical & Clean) -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap" rel="stylesheet">

    <!-- Preconnect for Affiliate (Vital Health) -->
    <link rel="preconnect" href="https://mx.vitalhealthglobal.com">
    <link rel="dns-prefetch" href="https://mx.vitalhealthglobal.com">

    <!-- SEO & Metadata -->
    <DynamicSEO {...seo} />
    
    <!-- Favicons -->
    <link rel="icon" href="/favicon.ico" sizes="any" />
    <link rel="icon" href="/favicon.png" type="image/png" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    <link rel="manifest" href="/manifest.webmanifest" />
    
    <!-- Analytics (GA4) - Silent Fail if no ID -->
    {import.meta.env.PUBLIC_GA_MEASUREMENT_ID && (
        <>
            <script async src={`https://www.googletagmanager.com/gtag/js?id=${import.meta.env.PUBLIC_GA_MEASUREMENT_ID}`}></script>
            <script is:inline define:vars={{ GA_ID: import.meta.env.PUBLIC_GA_MEASUREMENT_ID }}>
                window.dataLayer = window.dataLayer || [];
                function gtag(){dataLayer.push(arguments);}
                gtag('js', new Date());
                gtag('config', GA_ID);
                window.gtag = gtag;
            </script>
        </>
    )}

    <!-- Meta Pixel Code -->
    <script is:inline>
        !function(f,b,e,v,n,t,s)
        {if(f.fbq)return;n=f.fbq=function(){n.callMethod?
        n.callMethod.apply(n,arguments):n.queue.push(arguments)};
        if(!f._fbq)f._fbq=n;n.push=n;n.loaded=!0;n.version='2.0';
        n.queue=[];t=b.createElement(e);t.async=!0;
        t.src=v;s=b.getElementsByTagName(e)[0];
        s.parentNode.insertBefore(t,s)}(window, document,'script',
        'https://connect.facebook.net/en_US/fbevents.js');
        fbq('init', '1024976901790952', {
            "autoConfig": true,
            "agent": "astro"
        });
        fbq('track', 'PageView');
    </script>
    <noscript><img height="1" width="1" style="display:none"
    src="https://www.facebook.com/tr?id=1024976901790952&ev=PageView&noscript=1"
    /></noscript>
    <!-- End Meta Pixel Code -->
    
    <Analytics />
</head>
<body class="bg-[#FAFAF9] bg-gradient-to-b from-[#FAFAF9] to-[#F0F2F5] min-h-screen text-text-primary antialiased selection:bg-secondary/20 selection:text-primary">
    <!-- Google Tag Manager (noscript) -->
    <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-3MB2WFVX"
    height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
    <!-- End Google Tag Manager (noscript) -->
    
    <main class="w-full">
        <slot />
    </main>

    <footer class="pb-12">
        <Disclaimer />
    </footer>

</body>
</html>
