---
import BaseLayout from '../layouts/BaseLayout.astro';
import ButtonCTA from '../components/ui/ButtonCTA.astro';

const seo = {
  title: "Página no encontrada - CYN KIDS",
  description: "La página que buscas no existe.",
  noindex: true
};
---

<BaseLayout seo={seo}>
    <section class="min-h-[70vh] flex flex-col items-center justify-center text-center px-4">
        <h1 class="text-6xl md:text-8xl font-bold text-primary mb-4 opacity-20">404</h1>
        <h2 class="text-2xl md:text-3xl font-semibold text-primary mb-6">Página no encontrada</h2>
        <p class="text-text-secondary max-w-md mx-auto mb-10">
            Lo sentimos, la página que estás buscando no existe o ha sido movida.
        </p>
        <ButtonCTA href="/">
            Volver al inicio
        </ButtonCTA>
    </section>
</BaseLayout>
