---
import BaseLayout from '../layouts/BaseLayout.astro';
import ButtonCTA from '../components/ui/ButtonCTA.astro';

const seo = {
  title: "Einstein Kids | Ciencia y Nutrición Educativa",
  description: "Plataforma educativa sobre el desarrollo biológico infantil. Entendiendo la conexión intestino-cerebro y más.",
};
---

<BaseLayout seo={seo}>
    <section class="min-h-[80vh] flex flex-col justify-center items-center text-center px-4 relative overflow-hidden">
        <!-- Background Decor -->
        <div class="absolute top-0 left-0 w-full h-full overflow-hidden -z-10">
            <div class="absolute top-[-10%] right-[-10%] w-[500px] h-[500px] bg-secondary/5 rounded-full blur-3xl"></div>
            <div class="absolute bottom-[-10%] left-[-10%] w-[500px] h-[500px] bg-primary/5 rounded-full blur-3xl"></div>
        </div>

        <div class="max-w-[800px] mx-auto animate-fade-in-up">
            <h1 class="text-4xl md:text-6xl font-bold text-primary mb-6 tracking-tight">
                Einstein Kids
            </h1>
            <p class="text-xl md:text-2xl text-text-secondary font-light mb-12 max-w-[600px] mx-auto leading-relaxed">
                Conectando ciencia, nutrición y desarrollo para una nueva generación.
            </p>

            <div class="grid md:grid-cols-1 gap-8 max-w-[400px] mx-auto">
                <!-- Product Card: Smartbiotics -->
                <article class="bg-white p-6 rounded-2xl shadow-lg border border-secondary/10 hover:shadow-xl transition-all duration-300 group">
                    <h2 class="text-2xl font-semibold text-primary mb-2">Smartbiotics Kids</h2>
                    <p class="text-text-secondary mb-6 line-clamp-2">
                        Explorando la conexión intestino-cerebro y el equilibrio de la microbiota.
                    </p>
                    <ButtonCTA href="/smartbiotics" class="w-full justify-center">
                        Ver Detalles
                    </ButtonCTA>
                </article>
            </div>
        </div>
    </section>
</BaseLayout>
